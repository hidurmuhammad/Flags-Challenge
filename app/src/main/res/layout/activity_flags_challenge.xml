<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FlagsChallengeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/timer_text_view"
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/filled_gray_rounded_border"
                android:fontFamily="@font/notoserif_regular"
                android:gravity="center"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/notoserif_bold"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/main"
                android:textSize="@dimen/_24sp"
                app:textAllCaps="true" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/schedule_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoserif_regular"
                android:gravity="center"
                android:text="@string/schedule"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notoserif_regular"
                    android:gravity="center"
                    android:text="@string/hour" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notoserif_regular"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_16dp"
                    android:text="@string/minute" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notoserif_regular"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_16dp"
                    android:text="@string/seconds" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/hour_edit_text"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/filled_thin_gray_rounded_border"
                    android:fontFamily="@font/notoserif_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/_8dp"
                    android:text="@string/_0" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/minute_edit_text"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:background="@drawable/filled_thin_gray_rounded_border"
                    android:fontFamily="@font/notoserif_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/_8dp"
                    android:text="@string/_0" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/second_edit_text"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:background="@drawable/filled_thin_gray_rounded_border"
                    android:fontFamily="@font/notoserif_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/_8dp"
                    android:text="@string/_0" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_button"
                android:layout_width="@dimen/_150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16dp"
                android:background="@drawable/button_rounded_border"
                android:fontFamily="@font/notoserif_bold"
                android:text="@string/save"
                android:textColor="@color/white" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/countdown_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/notoserif_bold"
            android:gravity="center"
            android:text="@string/will_start"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/challenge_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_42dp"
                    android:layout_marginStart="@dimen/_24dp"
                    android:background="@drawable/filled_gray_rounded_border"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_question_count"
                        android:layout_width="@dimen/_32dp"
                        android:layout_height="@dimen/_32dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/filled_circle"
                        android:fontFamily="@font/notoserif_bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/_0"
                        android:textSize="@dimen/_12sp">

                    </androidx.appcompat.widget.AppCompatTextView>
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/question_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:fontFamily="@font/notoserif_regular"
                    android:gravity="center"
                    android:text="@string/guess_country"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textAllCaps="false" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/flag_image_view"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:layout_weight="0.5"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/option_1_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/gray_rounded_border"
                                android:fontFamily="@font/notoserif_regular"
                                android:padding="@dimen/_8dp"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/option_2_button"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_50dp"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_weight="1"
                                android:background="@drawable/gray_rounded_border"
                                android:fontFamily="@font/notoserif_regular"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12sp" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_option1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_42dp"
                            android:fontFamily="@font/notoserif_regular"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sp"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ll_top">

                        </androidx.appcompat.widget.AppCompatTextView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_option2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_42dp"
                            android:fontFamily="@font/notoserif_regular"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sp"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ll_top">

                        </androidx.appcompat.widget.AppCompatTextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/option_3_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/gray_rounded_border"
                                android:fontFamily="@font/notoserif_regular"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/option_4_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_weight="1"
                                android:background="@drawable/gray_rounded_border"
                                android:fontFamily="@font/notoserif_regular"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12sp" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_option3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_42dp"
                            android:fontFamily="@font/notoserif_regular"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sp"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ll_bottom">

                        </androidx.appcompat.widget.AppCompatTextView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_option4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_42dp"
                            android:fontFamily="@font/notoserif_regular"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sp"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ll_bottom">

                        </androidx.appcompat.widget.AppCompatTextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/result_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/notoserif_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_24sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/score_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:fontFamily="@font/notoserif_bold"
                android:gravity="center"
                android:text="SCORE: 0/15"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_over_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/notoserif_bold"
            android:gravity="center"
            android:text="@string/game_over"
            android:textColor="@color/black"
            android:textSize="@dimen/_24sp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>